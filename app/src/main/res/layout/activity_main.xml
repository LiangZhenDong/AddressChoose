<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="地址(可点击)" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff">

        <com.rudy.addresschoose.widget.SlidingTabLayout
            android:id="@+id/st_city"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#fff"
            android:fillViewport="true"
            tl:tl_indicator_color="#ff3e3e"
            tl:tl_indicator_height="2dp"
            tl:tl_indicator_width_equal_title="true"
            tl:tl_tab_padding="10dp"
            tl:tl_tab_space_equal="true"
            tl:tl_textSelectColor="#ff3e3e"
            tl:tl_textUnselectColor="#4a4a4a"
            tl:tl_textsize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#9fddd6d5"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:overScrollMode="never" />
</LinearLayout>
